<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/mimage"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/mimage"
            android:layout_marginStart="51dp"
            android:layout_marginTop="28dp"
            android:id="@+id/mname"
            android:textSize="18sp"
            tools:textStyle="bold" />

        <TextView
            android:text="price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mname"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:id="@+id/mprice"
            tools:textStyle="bold"
            android:layout_alignEnd="@+id/mname" />

        <TextView
            android:text="qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/mname"
            android:layout_marginStart="43dp"
            android:textSize="20dp"
            tools:textStyle="bold"
            android:id="@+id/mquantity" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_add_shopping_cart_black_24dp"
            android:layout_marginEnd="11dp"
            android:id="@+id/addToCartBtn"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>