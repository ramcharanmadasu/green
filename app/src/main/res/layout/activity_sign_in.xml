<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.leacoder.green.SignInActivity"
    android:background="#4BBD43">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleBtn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="122dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageView2">

    </com.google.android.gms.common.SignInButton>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sign"
        android:id="@+id/imageView5"
        android:layout_marginTop="61dp"
        android:layout_alignTop="@+id/googleBtn"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/iname"
        android:id="@+id/imageView6"
        android:gravity="center"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/icon"
        android:id="@+id/imageView2"
        android:layout_above="@+id/imageView6"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/tag"
        android:id="@+id/imageView7"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageView6" />

</RelativeLayout>
